@model UserCreateModel
@{
    Layout = "_Layout";
}

<form asp-action="Create" method="post" class="p-4 w-75 mx-auto shadow">
    <div class="mb-3">
        <label>Kullanıcı Adı:</label>
        <span class="text-danger" asp-validation-for="UserName"></span>
        <input asp-for="UserName" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Şifre:</label>
        <span class="text-danger" asp-validation-for="Password"></span>
        <input type="password" asp-for="Password" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Şifre Tekrar:</label>
        <span class="text-danger" asp-validation-for="ConfirmedPassword"></span>
        <input type="password" asp-for="ConfirmedPassword" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Email:</label>
        <span class="text-danger" asp-validation-for="Email"></span>
        <input type="email" asp-for="Email" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Cinsiyet:</label>
        <span class="text-danger" asp-validation-for="Gender"></span>
        <input asp-for="Gender" class="form-control" />
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-outline-primary">Kaydet</button>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger mt-2"></div>
</form>