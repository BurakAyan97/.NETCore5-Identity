@model UserSignInModel
@{
    Layout = "_Layout";
}

<form asp-action="SignIn" method="post" class="p-4 w-75 mx-auto shadow">
    <input type="hidden" asp-for="ReturnUrl" />
    <div class="mb-3">
        <label>Kullanıcı Adı:</label>
        <span class="text-danger" asp-validation-for="Username"></span>
        <input asp-for="Username" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Şifre:</label>
        <span class="text-danger" asp-validation-for="Password"></span>
        <input type="password" asp-for="Password" class="form-control" />
    </div>
    <div>
        <input class="form-check-input" type="checkbox" asp-for="RememberMe" />
        <label class="form-check-label" for="RememberMe">
            Beni Hatırla
        </label>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-outline-primary">Kaydet</button>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger mt-2"></div>
</form>