@model CustomCookieBased.Models.UserSignInModel
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Custom Cookie Based</title>
</head>
<body>
    <form method="post" asp-action="SignIn" asp-controller="Home">
        <input asp-for="Username" />
        <input asp-for="Password" />
        <input type="checkbox" asp-for="RememberMe" /> <label>Beni Hatırla</label>
        <div>
            <button type="submit">Giriş Yap</button>
        </div>
    </form>
</body>
</html>